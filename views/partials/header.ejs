<div class="header-container">
  <header class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <h1 class="title">Snippet Manager</h1>
      </a>
    </div>
    
    <div id="navbarMenu" class="navbar-menu">
      <div class="navbar-start">
        <a href="/" class="navbar-item">Home</a>
        
        <a href="/my-snippets" class="navbar-item">My Snippets</a>

        <a href="/knowledge-base" class="navbar-item">KB</a>
        
      </div>
      <div class="navbar-item search-container">
        <!-- search input goes here -->
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input is-rounded" type="text" id="search-input" placeholder="Search...">
            <span class="icon is-small is-left">
              <i class="fas fa-search"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-times search-clear-button" style="display: none;"></i>
            </span>
          </div>
          <div class="search-results-overlay">
            <div class="search-results-container">
              <ul id="search-results-list"></ul>
              <div class="search-results-count"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar-end">
        <% if (!user) { %>
          <a href="/login" class="navbar-item">Login</a>
        <% } else { %>
          <% if (user.isAdmin) { %>
            <a href="/admin/panel" class="navbar-item">Admin Panel</a>
          <% } %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <figure class="image is-32x32" style="margin-right: .5em;">
                <img src="<%= user.profileImage ? '/uploads/' + user.profileImage.filename : '/default.png' %>" alt="Profile Image">
              </figure>
              <%= user.username %>
            </a>
            <div class="navbar-dropdown">
              <a class="navbar-item" href="/profile">My Account</a>
              <a class="navbar-item" href="/logout">Logout</a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- In header.ejs -->
    <% console.log("User object in header:", user); %>
    <% if (user) { %>
      <% console.log("User profile image in header:", user.profileImage); %>
    <% } %>
    
  </header>
</div>

